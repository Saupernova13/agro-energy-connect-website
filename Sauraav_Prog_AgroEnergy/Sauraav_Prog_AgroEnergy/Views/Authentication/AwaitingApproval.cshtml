@model Sauraav_Prog_AgroEnergy.Models.FarmerModel
@{
    ViewData["Title"] = "Awaiting Approval";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .awaiting-approval-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 80vh;
        }

        .awaiting-approval-box {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 500px;
            text-align: center;
        }

            .awaiting-approval-box h2 {
                color: #5eb57a;
                font-weight: bold;
                margin-bottom: 1.5rem;
            }

            .awaiting-approval-box p {
                color: #333;
                font-size: 1.1rem;
                margin-bottom: 2rem;
            }

            .awaiting-approval-box a {
                color: #5eb57a;
                text-decoration: none;
                font-weight: bold;
            }

                .awaiting-approval-box a:hover {
                    color: #4da966;
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="awaiting-approval-container">
        <div class="awaiting-approval-box">
            <h2>@ViewData["Title"]</h2>
            <p>Thank you, @Model.FarmerName. Your registration is successful. Please wait for an admin to approve your account.</p>
            <a asp-area="" asp-controller="Home" asp-action="Index">Return to Home Page</a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>