@model Sauraav_Prog_AgroEnergy.Models.AccountModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        h1, h2, h3{
            font-weight: bold;
        }
        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 80vh;
        }

        .login-box {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

            .login-box h4 {
                color: #5eb57a;
                margin-bottom: 1.5rem;
                font-weight: bold;
            }

            .login-box .form-group label {
                font-weight: bold;
                color: #333;
            }

            .login-box .btn-primary {
                background-color: #5eb57a;
                border-color: #5eb57a;
            }

                .login-box .btn-primary:hover {
                    background-color: #4da966;
                    border-color: #4da966;
                }

            .login-box a {
                color: #5eb57a;
                text-decoration: none;
            }

                .login-box a:hover {
                    color: #4da966;
                    text-decoration: underline;
                }

        .form-control {
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <h4>@ViewData["Title"]</h4>
            <form asp-action="Login">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="accountEmail" class="control-label">Enter Account Email</label>
                    <input asp-for="accountEmail" class="form-control" />
                    <span asp-validation-for="accountEmail" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="accountPassword" class="control-label">Enter Account Password</label>
                    <input asp-for="accountPassword" class="form-control" type="password" />
                    <span asp-validation-for="accountPassword" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
            <br />
            <div>
                <a asp-action="Register">Don't have an account? Register Here</a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>