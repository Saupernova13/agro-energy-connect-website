@model Sauraav_Prog_AgroEnergy.Models.ItemModel
@{
    ViewData["Title"] = "Add New Item";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .add-item-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 80vh;
        }

        .add-item-box {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 600px;
            text-align: center;
        }

            .add-item-box h2 {
                color: #5eb57a;
                font-weight: bold;
                margin-bottom: 1.5rem;
            }

            .add-item-box .form-group label {
                font-weight: bold;
                color: #333;
            }

            .add-item-box .btn-primary {
                background-color: #5eb57a;
                border-color: #5eb57a;
            }

                .add-item-box .btn-primary:hover {
                    background-color: #4da966;
                    border-color: #4da966;
                }

        .form-control {
            border-radius: 5px;
        }

        .space-bottom {
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="add-item-container">
        <div class="add-item-box">
            <h2>@ViewData["Title"]</h2>
            <form asp-action="AddItem" method="post" enctype="multipart/form-data">
                <div>
                    <input asp-for="FarmerUID" type="hidden" value="@Context.Session.GetString("currentUser")" />
                </div>
                <div class="form-group space-bottom">
                    <label asp-for="itemName" class="control-label">Item Name</label>
                    <input asp-for="itemName" class="form-control" />
                </div>
                <div class="form-group space-bottom">
                    <label asp-for="itemPrice" class="control-label">Item Price</label>
                    <input asp-for="itemPrice" type="number" class="form-control" />
                </div>
                <div class="form-group space-bottom">
                    <label asp-for="itemDescription" class="control-label">Item Description</label>
                    <input asp-for="itemDescription" class="form-control" />
                </div>
                <div class="form-group space-bottom">
                    <label asp-for="itemCategory" class="control-label">Item Category</label>
                    <input asp-for="itemCategory" class="form-control" />
                </div>
                <div class="form-group space-bottom">
                    <label class="control-label">Item Image</label>
                    <input type="file" name="itemImage" class="form-control" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary mt-3">Add Item</button>
                </div>
            </form>
        </div>
    </div>
    <br />
    <br />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>